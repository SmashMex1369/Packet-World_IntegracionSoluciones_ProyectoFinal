<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EnvioFragment">

    <TextView
        android:id="@+id/tv_sucursal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Destinatario"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_1"
        app:layout_constraintVertical_chainStyle="spread_inside"/>


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sucursal"
        app:layout_constraintBottom_toTopOf="@id/ll_2"
        android:orientation="vertical">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="24sp"/>
        <TextView
            android:id="@+id/tv_sucursal_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="[Nombre Completo]"
            android:textColor="@color/grisOscuro"
            android:textAlignment="center"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        app:layout_constraintBottom_toTopOf="@id/ll_3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/tv_estado_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="[Estado]"
                android:textColor="@color/grisOscuro"
                android:textAlignment="center"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Ciudad:"/>
            <TextView
                android:id="@+id/tv_estatus_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/grisOscuro"
                android:textAlignment="center"
                android:hint="[Ciudad]"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_2"
        app:layout_constraintBottom_toTopOf="@id/ll_4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colonia:"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="[Colonia]:"
                android:textColor="@color/grisOscuro"
                android:textAlignment="center"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Codigo Postal:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/grisOscuro"
                android:textAlignment="center"
                android:hint="[Codigo Postal]"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ll_3"
        app:layout_constraintBottom_toTopOf="@id/v_inferior"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle:"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="[Calle]"
                android:textColor="@color/grisOscuro"
                android:textAlignment="center"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="NÃºmero exterior:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/grisOscuro"
                android:textAlignment="center"
                android:hint="[Numero]"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_inferior"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintTop_toBottomOf="@id/ll_4"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>