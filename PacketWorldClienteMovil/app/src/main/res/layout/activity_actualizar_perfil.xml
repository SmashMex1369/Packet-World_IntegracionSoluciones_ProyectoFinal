<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarPerfilActivity">

    <View
        android:id="@+id/v_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/rojoOscuro"
        app:layout_constraintBottom_toBottomOf="@id/tv_actualizar_perfil"
        app:layout_constraintBottom_toTopOf="@id/imgv_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />
    <TextView
        android:id="@+id/tv_actualizar_perfil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Actualizar Perfil"
        android:paddingHorizontal="5dp"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="@color/grisFondo"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/v_header"
        app:layout_constraintBottom_toBottomOf="@id/v_header"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgv_perfil"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintTop_toBottomOf="@id/v_header"
        app:layout_constraintBottom_toTopOf="@id/til_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_seleccionar_imagen"
        app:civ_border_overlay="true"
        app:civ_border_width="10dp"
        app:civ_border_color="@color/azulOscuro"/>
    <Button
        android:id="@+id/btn_seleccionar_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:backgroundTint="@color/azulOscuro"
        android:textColor="@color/grisFondo"
        android:text="Seleccionar\nImagen"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/imgv_perfil"
        app:layout_constraintTop_toTopOf="@id/imgv_perfil"
        app:layout_constraintBottom_toBottomOf="@id/imgv_perfil"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="Nombre"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:boxStrokeErrorColor="@color/rojoClaro"
        app:layout_constraintTop_toBottomOf="@id/imgv_perfil"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintBottom_toTopOf="@id/til_apellido_paterno"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_apellido_paterno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="Apellido Paterno"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintTop_toBottomOf="@id/til_nombre"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintBottom_toTopOf="@id/til_apellido_materno"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_apellido_paterno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_apellido_materno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="Apellido Materno"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintBottom_toTopOf="@id/til_curp"
        app:layout_constraintTop_toBottomOf="@id/til_apellido_paterno"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_apellido_materno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_curp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="CURP"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintTop_toBottomOf="@id/til_apellido_materno"
        app:layout_constraintBottom_toTopOf="@id/til_correo"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_curp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_correo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="Correo Electrónico"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintTop_toBottomOf="@id/til_curp"
        app:layout_constraintBottom_toTopOf="@id/til_contraseña"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_contraseña"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="Contraseña"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintTop_toBottomOf="@id/til_correo"
        app:layout_constraintBottom_toTopOf="@id/til_no_licencia"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_contraseña"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_no_licencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/azul"
        android:hint="No. de Licencia"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintTop_toBottomOf="@id/til_contraseña"
        app:layout_constraintBottom_toTopOf="@id/btn_guardar"
        app:hintTextAppearance="@style/EstiloTextoFlotante">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_no_licencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="@color/grisOscuro"
            android:textSize="24sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/til_no_licencia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textColor="@color/grisFondo"
        android:backgroundTint="@color/azul"
        android:paddingHorizontal="50dp"
        android:paddingVertical="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>