<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulFondoApp"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>

    <TextView
        android:id="@+id/tv_nombre_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/imgv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <ImageView
        android:id="@+id/imgv_logo"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo_packet_world"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nombre_app"
        app:layout_constraintBottom_toTopOf="@id/tv_bienvenida"
        android:contentDescription="LogoPacketWorld"/>
    <TextView
        android:id="@+id/tv_bienvenida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Bienvenido a la Administración de Envios"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_instrucciones"/>
    <TextView
        android:id="@+id/tv_instrucciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text=" Para acceder ingrese su\nNo. de Personal y contraseña"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_bienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/til_no_personal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_no_personal"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/azul"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:hintTextAppearance="@style/EstiloTextoFlotante"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintBottom_toTopOf="@id/til_contraseña"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintTop_toBottomOf="@id/tv_instrucciones">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_no_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. de Personal"
            android:inputType="text"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grisOscuro"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_contraseña"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/azul"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/color_linea_input"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="4dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/azulOscuro"
        app:hintTextAppearance="@style/EstiloTextoFlotante"
        app:hintTextColor="@color/azulOscuro"
        app:layout_constraintBottom_toTopOf="@id/btn_ingresar"
        app:layout_constraintEnd_toEndOf="@id/gl_fin"
        app:layout_constraintStart_toStartOf="@id/gl_inicio"
        app:layout_constraintTop_toBottomOf="@id/til_no_personal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingVertical="15dp"
        android:textColor="@color/grisFondo"
        android:backgroundTint="@color/azul"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/til_contraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>