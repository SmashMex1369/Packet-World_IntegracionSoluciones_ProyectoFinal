<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b7a943"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"/>
        <TextView
            android:id="@+id/tv_nombre_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:text="@string/app_name"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imgv_logo"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo_packet_world"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre_app"
            android:contentDescription="LogoPacketWorld"/>
        <TextView
            android:id="@+id/tv_bienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Bienvenido a la Administración de Envios"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/imgv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_instrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text=" Para acceder ingrese su\nNo. de Personal y contraseña"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_bienvenida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_no_personal"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/color_linea_input"
            app:boxStrokeWidth="4dp"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/gris"
            app:boxStrokeWidthFocused="4dp"
            app:hintTextAppearance="@style/EstiloTextoFlotante"
            app:layout_constraintEnd_toEndOf="@id/gl_fin"
            app:layout_constraintStart_toStartOf="@id/gl_inicio"
            app:layout_constraintTop_toBottomOf="@id/tv_instrucciones">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. de Personal"
                android:textColorHint="@color/black"
                android:inputType="text"
                android:paddingBottom="5dp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="22sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_contraseña"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/gris"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintTop_toBottomOf="@id/et_no_personal"
            app:layout_constraintStart_toStartOf="@id/gl_inicio"
            app:layout_constraintEnd_toEndOf="@id/gl_fin"
            app:hintTextAppearance="@style/EstiloTextoFlotante"
            app:boxStrokeWidth="4dp"
            app:boxStrokeWidthFocused="4dp"
            app:boxStrokeColor="@color/color_linea_input"
            app:hintTextColor="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:paddingBottom="5dp"
                android:hint="Contraseña"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="22sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_contraseña"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>